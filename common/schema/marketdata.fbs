namespace hft.serialization.gen.fbs;

enum OrderAction: byte {
    BUY = 0,
    SELL = 1
}

// Bitmask
enum OrderState: int {
    Accepted = 0,
    Partial = 1,
    Full = 2,
    Instant = 4
}

table Order {
    id: uint64;
    ticker: string;
    action: OrderAction;
    quantity: uint;
    price: float;
}

table OrderStatus {
    id: uint64;
    ticker: string;
    state: OrderState;
    quantity: uint;
    fill_price: float;
}

table TickerPrice {
    ticker: string;
    price: float;
}
